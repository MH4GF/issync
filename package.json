{
  "name": "issync",
  "version": "0.1.0",
  "description": "CLI tool to sync text between GitHub Issue comments and local files",
  "type": "module",
  "bin": {
    "issync": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node",
    "dev": "bun run ./src/cli.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "biome check --write .",
    "check:ci": "biome check . && eslint . && tsc --noEmit && bun test",
    "knip": "knip-bun",
    "knip:fix": "knip-bun --fix",
    "postinstall": "lefthook install"
  },
  "keywords": [
    "github",
    "issue",
    "sync",
    "cli",
    "ai",
    "documentation"
  ],
  "author": "MH4GF",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@eslint/js": "^9.37.0",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "knip": "^5.64.3",
    "lefthook": "^1.13.6",
    "typescript-eslint": "^8.46.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
