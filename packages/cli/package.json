{
  "name": "@mh4gf/issync",
  "version": "0.15.0",
  "description": "CLI tool to sync text between GitHub Issue comments and local files",
  "type": "module",
  "bin": {
    "issync": "./dist/cli.js"
  },
  "files": [
    "dist",
    "../../README.md",
    "../../LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MH4GF/issync.git"
  },
  "homepage": "https://github.com/MH4GF/issync#readme",
  "bugs": {
    "url": "https://github.com/MH4GF/issync/issues"
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm --external @octokit/rest --external chokidar --external commander --external js-yaml",
    "prepare": "bun run build",
    "dev": "bun run ./src/cli.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test src",
    "test:watch": "bun test src --watch"
  },
  "keywords": [
    "github",
    "issue",
    "sync",
    "cli",
    "ai",
    "documentation"
  ],
  "author": "MH4GF",
  "license": "MIT",
  "dependencies": {
    "@octokit/graphql": "^9.0.3",
    "@octokit/rest": "^21.0.2",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
